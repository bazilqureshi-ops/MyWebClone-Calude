@using Emse.QMagic.Web.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    qmAppointment Schedule = ViewBag.Schedules;
    List<qmScheduleBranch> Pairs = ViewBag.Pairs;
    List<qmBranch> Branches = ViewBag.Branches;
}

<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" />
<script src="~/assets/js/sweetalert2.all.min.js"></script>

<script>
    function RemoveItem(ScID) {
        $.get("/Appointment/RemovePair", { PairID: ScID }, function (data) {
            if (data.indexOf("OK++") > 0) {
                $("#item_" + ScID).remove();
            }
            else {
                alert("Item could not be deleted.");
            }
        });
    }

    function AddItem(ScID) {
        cmbBranch = $("#cmbBranches").val();
        $.get("/Appointment/AddPair", { BranchID: cmbBranch, ScheduleID:ScID }, function (data) {
            $("#tablebody").append(data);
        });
    }
</script>

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="card">
            <div class="card-header">
                Pairs
            </div>
            <div class="card-body no-padding">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td>
                            <select name="cmbBranches" id="cmbBranches" class="select2">
                                @{
                                    foreach (qmBranch item in Branches)
                                    {
                                        <option value="@(item.BranchID)">@(item.BranchName)</option>
                                    }
                                }
                            </select>
                        </td>
                        <td>
                            <input type="button" class="btn btn-primary" value="Add" onclick="AddItem(@(Schedule.AppointmentID));" />
                        </td>
                    </tr>
                </table>
                <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Branch Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tablebody">
                        @{
                            foreach (qmScheduleBranch item in Pairs)
                            {
                                <tr id="item_@(item.ScheduleBranchID)">
                                    <td>@(Branches.Where(x=>x.BranchID == item.BranchID).FirstOrDefault().BranchName.ToString())</td>
                                    <td><input type="button" class="btn btn-danger" value="Remove" onclick="RemoveItem(@(item.ScheduleBranchID));" /></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-right" style="padding:10px;">
                <a href="~/Appointment/ListBranchPairs" class="btn btn-primary">OK</a>
            </div>
        </div>
    </div>
</div>


<div class="btn-floating" id="help-actions">
    <div class="btn-bg"></div>
    <button type="button" class="btn btn-default btn-toggle" data-toggle="toggle" data-target="#help-actions">
        <i class="icon fa fa-plus"></i>
        <span class="help-text">Shortcut</span>
    </button>
    <div class="toggle-content">
        <ul class="actions">
            <li><a href="~/Appointment/CreateSchedule">Create Appointment Schedule</a></li>
            <li><a href="~/Appointment/ListBranchPairs">Pair Schedule and Branch</a></li>
        </ul>
    </div>
</div>