@using Emse.QMagic.Web.Domain.Viewmodels;
@model GenericReportViewModel

<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
		<div class="card">
			<div class="card-header">
				Your Custom Reports
			</div>
			<div class="card-body no-padding">
				<table class="datatable table table-striped primary" cellspacing="0" width="100%">
					<thead>
						<tr>
							<th>Custom Report Name</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@{
							for (int i = 0; i < Model.ReportShares.Count; i++)
							{
								<tr>
									<td>@Model.ReportShares[i].qmReport.ReportName</td>

									<td width="200">
										<a href="../Reports/EditGeneric?id=@Model.ReportShares[i].ReportID" class="btn btn-default"><span class="fa fa-pencil"></span></a>
									</td>
								</tr>
							}

						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


<div class="btn-floating" id="help-actions">
	<div class="btn-bg"></div>
	<button type="button" class="btn btn-default btn-toggle" data-toggle="toggle" data-target="#help-actions">
		<i class="icon fa fa-plus"></i>
		<span class="help-text">Shortcut</span>
	</button>
	<div class="toggle-content">
		<ul class="actions">
			<li><a href="/Reports/CreateGeneric">Create a New Custom Report</a></li>
		</ul>
	</div>
</div>