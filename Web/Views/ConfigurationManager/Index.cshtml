@using Emse.QMagic.Web.Domain.Viewmodels
@model ConfigurationManagerViewModel


<script>
    $(document).on('submit', 'form', function () {
        var button = $(this).find(':submit');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<label>
					Configuration Manager
				</label>
			</div>

			<div class="card-body">

                <form action="/ConfigurationManager" method="post" class="row">
                    <input type="hidden" name="Config.ConfigID" value="@Model.Config.ConfigID" />

                    @if (ViewBag.Success != null)
                    {
                        <label class="text-success">
                            @ViewBag.Success.ToString()
                        </label>
                    }

                    <!-- Place Name & HQ Ip -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Place Name </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.PlaceName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </div>
                                <label class="text-danger col-md-offset-3">
                                    @Html.ValidationMessageFor(entity => entity.Config.PlaceName)
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> HQ IP </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.HQIP, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                </div>
                                <label class="text-danger col-md-offset-4">
                                    @Html.ValidationMessageFor(entity => entity.Config.HQIP)
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile Server Key & Mobile Sender ID-->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mobile Server Key </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MobileServerKey, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mobile Sender ID </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MobileSenderID, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile Title & Mobile Description -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mobile Title </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MobileTitle, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mobile Description </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MobileDescription, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mail Server & Mail Port -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mail Server </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MailServer, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <label class="text-danger col-md-offset-3">
                                    @Html.ValidationMessageFor(entity => entity.Config.MailServer)
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mail Port </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MailPort, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mail Address & Mail Password -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mail Address </label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MailAddress, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                                </div>
                                <label class="text-danger col-md-offset-3">
                                    @Html.ValidationMessageFor(entity => entity.Config.MailAddress)
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label"> Mail Password</label>
                                <div class="col-md-9">
                                    @Html.EditorFor(entity => entity.Config.MailPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                </div>
                                <label class="text-danger col-md-offset-3">
                                    @Html.ValidationMessageFor(entity => entity.Config.MailPassword)
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile Ticketing & Mobile Feedback -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> Mobile Ticketing </label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.MobileTicketingOn", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> Mobile Feedback </label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.MobileFeedbackOn", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SMS Notification && Mail Notification -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> SMS Notification </label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.SMSNotificationOn", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> Mail Notification </label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.MailNotificationOn", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Active Directory Integration -->
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> Enable Active Directory Integration</label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.ActiveDirectoryEnabled", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> Require PIN for Active Directory Direct Logins</label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.UsePinForADLogin", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-md-7 control-label"> Enable Votebook Feature</label>
                                <div class="col-md-3">
                                    @Html.CheckBox("Config.VotebookOn", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-footer text-right">
                        <div class="form-group">
                            <div class="col-md-9 col-md-offset-3">
                                <a href="../Home" class="btn btn-default">Cancel</a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </form>

			</div>

		</div>
	</div>
</div>