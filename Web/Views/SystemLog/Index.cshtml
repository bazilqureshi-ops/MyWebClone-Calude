@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        Refresh();
    });

    function Refresh() {
        $("#LogDiv").html("<center><img src='../assets/images/loading2.gif' /></center>");
        $.post("../SystemLog/LogList", { hede: "bidi" }, function (data) {
            $("#LogDiv").html(data);
        });
    }
</script>

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="card">
            <div class="card-header">
                <a href="javascript:Refresh();" class="btn btn-primary"><i class="fa fa-refresh"></i> Refresh System Logs</a>
            </div>
            <div class="card-body no-padding">
                <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Description</th>
                            <th>User</th>
                            <th>Date & Time</th>
                        </tr>
                    </thead>
                    <tbody id="LogDiv">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>