@using Emse.QMagic.Web.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<qmTerminal> terminals = ViewBag.terminals;
    int RuleID = ViewBag.RuleID;
    List<qmGenerateTicketTerminal> responses = ViewBag.responses;
}

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Generate Ticket Rule Terminal Responsibilities
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Select Terminals to Show in This Rule</label>
                                <div class="col-md-8">
                                    <select name="TerminalList" class="select2" multiple="multiple" size="5" style="width:100%;">
                                        @foreach (qmTerminal item in terminals)
                                        {
                                            if (responses.Where(x => x.TerminalID == item.TerminalID).Count() > 0)
                                            {
                                                <option value="@item.TerminalID" selected="selected">@(item.TerminalName)</option>
                                            }
                                            else
                                            {
                                                <option value="@item.TerminalID">@(item.TerminalName)</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-footer text-right">
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <a href="../GenerateTicket" class="btn btn-default">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
