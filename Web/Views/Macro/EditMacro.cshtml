	//Encode Formula Function
	function EncodeFormula(FormulaCode) {
		var xml = FormulaCode;
		var xmlDoc = $.parseXML(xml),
			$xml = $(xmlDoc);

		if ($xml.find("line").length > 0) {
			$(".NoFormula").hide();
			$xml.find("line").each(function () {
				var html = $(this).html();
				if ($(this).attr('type') == "TT") {
					//Terminal Id
					var terminalFirst = html.indexOf("<argument>") + 9;
					var terminalLast = html.indexOf("</argument>");
					var terminalId = html.substring(terminalFirst + 1, terminalLast);

					var terminalName = "";
					var terminalOptions = $('#cmbTerminal option');
					$(terminalOptions).each(function () {
						if ($(this).val() == terminalId) {
							terminalName = $(this).text();
						}
					});

					$("#MacroArea").append("<div class='formula' type='TT'>TT(" + terminalId + ")</div>");
					$("#MacroDesign").append("<div class='dformula' type='TT'>Transfer To Terminal(" + terminalName + ") <i style='' class='macro-delete fa fa-close'></i></div>");
				}
				if ($(this).attr('type') == "ST") {
					//Service Id
					var serviceFirst = html.indexOf("<service>") + 8;
					var serviceLast = html.indexOf("</service>");
					var serviceId = html.substring(serviceFirst + 1, serviceLast);

					//Segment Id
					var segmentFirst = html.indexOf("<segment>") + 9;
					var segmentLast = html.indexOf("</segment>");
					var segmentId = html.substring(segmentFirst + 1, segmentLast);

					var serviceName = "";
					var segmentName = "";

					var serviceOptions = $('#cmbService option');
					$(serviceOptions).each(function () {
						if ($(this).val() == serviceId) {
							serviceName = $(this).text();
						}
					});
					var segmentOption = $('#segos option');
					$(segmentOption).each(function () {
						if ($(this).val() == segmentId) {
							segmentName = $(this).text();
						}
					});

					//Append ST
					$("#MacroArea").append("<div class='formula' type='ST'>ST(" + serviceId + ", " + segmentId + ")</div>");
					$("#MacroDesign").append("<div class='dformula' type='ST'>Transfer To Service(" + serviceName + ", " + segmentName + ") <i style='' class='macro-delete fa fa-close'></i></div>");

				}
				if ($(this).attr('type') == "FIFO") {

					var fifos = $(this).children();

					//MacroArea Div
					var macroAreaContaier = "";
					var macroAreaStart = "<div class='formula' type='FIFO'>FIFO(";
					var macroAreaEnd = ")</div>";

					//MacroDesign Div
					var macroDesignContainer = "";
					var macroDesignStart = "<div class='dformula' type='FIFO'>First in First Out(";
					var macroDesignEnd = ") <i style='' class='macro-delete fa fa-close'></i></div>";

					//Statements
					if (fifos.length > 0) {
						macroAreaContaier += macroAreaStart;
						macroDesignContainer += macroDesignStart;
						var fifoLength = fifos.length;

						$(fifos).each(function (index, object) {
							var childHtml = $(this).html();
							var serviceFirst = childHtml.indexOf("<service>") + 8;
							var serviceLast = childHtml.indexOf("</service>");
							var serviceId = childHtml.substring(serviceFirst + 1, serviceLast);

							//Segment Id
							var segmentFirst = childHtml.indexOf("<segment>") + 9;
							var segmentLast = childHtml.indexOf("</segment>");
							var segmentId = childHtml.substring(segmentFirst, segmentLast);

							var serviceName = "";
							var segmentName = "";

							var serviceOptions = $('#cmbService option');
							$(serviceOptions).each(function () {
								if ($(this).val() == serviceId) {
									serviceName = $(this).text();
								}
							});
							var segmentOption = $('#segos option');
							$(segmentOption).each(function () {
								if ($(this).val() == segmentId) {
									segmentName = $(this).text();
								}
							});

							if (index === (fifoLength - 1)) {
								macroAreaContaier += '' + serviceId + ',' + segmentId + '';
								macroDesignContainer += '' + serviceName + ',' + segmentName + '';
							} else {
								macroAreaContaier += '' + serviceId + ',' + segmentId + ' + ';
								macroDesignContainer += '' + serviceName + ',' + segmentName + ' + ';
							}



						});

						macroAreaContaier += macroAreaEnd;
						macroDesignContainer += macroDesignEnd;

						//Append data
						$("#MacroArea").append(macroAreaContaier);
						$("#MacroDesign").append(macroDesignContainer);
					}

				}
				if ($(this).attr('type') == "Advance") {

					var ads = $(this).children();

					//MacroArea Div
					var macroAreaContaier = "";
					var macroAreaStart = "<div class='formula' type='Advance'>Advance(";
					var macroAreaEnd = ")</div>";

					//MacroDesign Div
					var macroDesignContainer = "";
					var macroDesignStart = "<div class='dformula' type='Advance'>Advance(";
					var macroDesignEnd = ") <i style='' class='macro-delete fa fa-close'></i></div>";

					//Statements
					if (ads.length > 0) {
						macroAreaContaier += macroAreaStart;
						macroDesignContainer += macroDesignStart;
						var adLength = ads.length;

						$(ads).each(function (index, object) {
							var childHtml = $(this).html();
							var serviceFirst = childHtml.indexOf("<service>") + 8;
							var serviceLast = childHtml.indexOf("</service>");
							var serviceId = childHtml.substring(serviceFirst + 1, serviceLast);

							//Segment Id
							var segmentFirst = childHtml.indexOf("<segment>") + 9;
							var segmentLast = childHtml.indexOf("</segment>");
							var segmentId = childHtml.substring(segmentFirst, segmentLast);

							//Count
							var countFirst = childHtml.indexOf("<count>") + 7;
							var countLast = childHtml.indexOf("</count>");
							var countNumber = childHtml.substring(countFirst, countLast);

							var serviceName = "";
							var segmentName = "";

							var serviceOptions = $('#cmbService option');
							$(serviceOptions).each(function () {
								if ($(this).val() == serviceId) {
									serviceName = $(this).text();
								}
							});
							var segmentOption = $('#segos option');
							$(segmentOption).each(function () {
								if ($(this).val() == segmentId) {
									segmentName = $(this).text();
								}
							});

							if (index === (adLength - 1)) {
								macroAreaContaier += '|' + countNumber + ',' + serviceId + ',' + segmentId + '|';
								macroDesignContainer += '' + countNumber + ',' + serviceName + ',' + segmentName + '|';
							} else {
								macroAreaContaier += '|' + countNumber + ',' + serviceId + ',' + segmentId + '| + ';
								macroDesignContainer += '|' + countNumber + ',' + serviceName + ',' + segmentName + '| + ';
							}



						});

						macroAreaContaier += macroAreaEnd;
						macroDesignContainer += macroDesignEnd;

						//Append data
						$("#MacroArea").append(macroAreaContaier);
						$("#MacroDesign").append(macroDesignContainer);
					}

				}
				if ($(this).attr('type') == "APPOINTMENT") {
					//Appointment Id
					var appointmentFirst = html.indexOf("<argument>") + 9;
					var appointmentLast = html.indexOf("</argument>");
					var appointmentId = html.substring(appointmentFirst + 1, appointmentLast);

					var appointmentName = "";
					var appointmentOptions = $('#cmbAppointment option');
					$(appointmentOptions).each(function () {
						if ($(this).val() == appointmentId) {
							appointmentName = $(this).text();
						}
					});

					$("#MacroArea").append("<div class='formula' type='AP'>AP(" + appointmentId + ")</div>");
					$("#MacroDesign").append("<div class='dformula' type='AP'>Appointment(" + appointmentName + ") <i style='' class='macro-delete fa fa-close'></i></div>");
				}
			});
		}

	}

	//Decode Formula
	function DecodeFormula() {
		var sourcecode = "<xml>\n";
		$(".formula").each(function () {
			var command = $(this).html();

			if (command.indexOf("TT") != -1) {
				var pFrom = command.indexOf("(");
				var pTo = command.indexOf(")");
				var terminalNumber = command.substring(pFrom + 1, pTo);

				sourcecode += "<line type=\"TT\">\n<argument>" + terminalNumber + "</argument>\n</line>\n";
			}
			if (command.indexOf("ST") != -1) {
				var pFrom = command.indexOf("(");
				var pTo = command.indexOf(",");
				var servnum = command.substring(pFrom + 1, pTo);

				pFrom = command.indexOf(",");
				pTo = command.indexOf(")");
				var segnum = command.substring(pFrom + 1, pTo);

				sourcecode += "<line type=\"ST\">\n<st><service>" + servnum + "</service>\n<segment>" + segnum + "</segment>\n</st>\n</line>\n";
			}
			if (command.indexOf("FIFO") != -1) {
				command = command.replace("FIFO(", "");
				command = command.replace(")", "");
				var items = command.split(" + ");
				var totalitem = command.split(" + ").length;

				sourcecode += "<line type=\"FIFO\">\n";

				for (var i = 0; i < totalitem; i++) {

					var params = items[i].split(",");
					var srv = params[0];
					var sgm = params[1];

					sourcecode += "<fifo>\n<service>" + srv + "</service>\n<segment>" + sgm + "</segment>\n</fifo>\n";
				}

				sourcecode += "</line>\n";
			}
			if (command.indexOf("Advance") != -1) {
				command = command.replace("Advance(", "");
				command = command.replace(")", "");

				var items = command.split(" + ");
				var totalitem = command.split(" + ").length;

				sourcecode += "<line type=\"Advance\">\n";

				for (var i = 0; i < totalitem; i++) {

					var params = items[i].split(",");
					var cnt = params[0].replace("|", "");
					var srv = params[1].replace("|", "");
					var sgm = params[2].replace("|", "");

					sourcecode += "<ad>\n<service>" + srv + "</service>\n<segment>" + sgm + "</segment>\n<count>" + cnt + "</count>\n</ad>\n";
				}

				sourcecode += "</line>\n";
			}
			if (command.indexOf("AP") != -1) {
				var pFrom = command.indexOf("(");
				var pTo = command.indexOf(")");
				var appointmentNumber = command.substring(pFrom + 1, pTo);

				sourcecode += "<line type=\"APPOINTMENT\">\n<argument>" + appointmentNumber + "</argument>\n</line>\n";
			}
		});

		sourcecode += "</xml>";
		$("#txtCode").html(sourcecode);
	}

	//Check Action Function
	function CheckAction() {
		if ($("#cmbMacroType").val() == "TT") {
			$("#Term").show();
			$("#SerSeg").hide();
			$("#DivAdvance").hide();
			$('#appointmentList').hide();
		}
		else if ($("#cmbMacroType").val() == "AP") {
			$('#appointmentList').show();
			$("#Term").hide();
			$("#SerSeg").hide();
			$("#DivAdvance").hide();
		}
		else {
			if ($("#cmbMacroType").val() == "Advance") {
				$("#DivAdvance").show();
				$("#Term").hide();
				$("#SerSeg").hide();
				$('#appointmentList').hide();
			}
			else {
				$("#SerSeg").show();
				$("#Term").hide();
				$("#DivAdvance").hide();
				$('#appointmentList').hide();
			}
		}
	}

	//GoDesigner Function
	function GoDesigner() {
		$("#DesignTab").show();
		$("#CodeTab").hide();

		$("#btnGoSourceCode").removeClass("active");
		$("#btnGoDesigner").addClass("active");
	}

	//GoSource Function
	function GoSourceCode() {
		$("#DesignTab").hide();
		$("#CodeTab").show();

		DecodeFormula();

		$("#btnGoSourceCode").addClass("active");
		$("#btnGoDesigner").removeClass("active");
	}

	//Save Macro
	function SaveMacro() {
		GoSourceCode();
		$("#form1").submit();
	}

</script>

