	//Delete Function
	$(function () {
		$("div").on("click", ".fa-close",
			function (event) {

				swal({
					title: "Are you sure to delete this line?",
					icon: "warning",
					buttons: true,
					dangerMode: true,
				})
					.then((willDelete) => {
						if (willDelete) {
							var object = $(this).parent();
							var index = $('.dformula').index(object);
							$('.formula').each(function () {

								if ($('.formula').index(this) === index) {
									$(this).remove();
									return false;
								}
							});

							var count = 0;
							object.remove();
							$('.dformula').each(function () {
								count++;
							});

							if (count === 0) {
								$(".NoFormula").show();
							}
						} else {
							swal({
								title: "Canceled",
								icon: "info",
							});
						}
					});



			});
	});

