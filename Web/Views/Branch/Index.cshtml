@using Emse.QMagic.Web.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<qmBranch> branches = ViewBag.model;
}

<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" />
<script src="~/assets/js/sweetalert2.all.min.js"></script>
<script type='text/javascript' src="https://rawgit.com/RobinHerbots/jquery.inputmask/3.x/dist/jquery.inputmask.bundle.js"></script>

<script>
    function DeleteRecord(branchid) {
        $.post("../Branch/PrepareDelete?BranchID=" + branchid, {}, function (data) {

            swal({
                title: "Are you sure want to delete this record?",
                text: data,
                icon: "warning",
                buttons: true,
                dangerMode: true,
                content: data
            })
            .then((willDelete) => {
                if (willDelete) {
                        //window.location = "../Appointment/DeleteSchedule?AppointmentID=" + recordid;

                        $("#PostDelete").submit();
                } else {
                    swal({
                        title: "Nothing changed",
                        icon: "success"
                    });
                }
            });

            $(".swal-text").html(data);
        });
    }

    $(document).ready(function () {
        if ("@(ViewBag.returncode)" == 99) {
            swal({
                title: "Invalid License Key!",
                text: "Your license key is not covering this action. Please contact with your local QMagic partner to extend your license.",
                icon: "warning",
                buttons: false,
                dangerMode: true,
            });
        }
    });
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Branch Management
            </div>
            <div class="card-body no-padding">
                <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Branch Code</th>
                            <th>Branch Name</th>
                            <th>Central Server Database Name</th>
                            <th>Port Number</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (qmBranch item in branches)
                            {
                                <tr>
                                    <td>@item.BranchCode</td>
                                    <td>@item.BranchName</td>
                                    <td>@item.IPAddress</td>
                                    <td>@item.PortNumber</td>
                                    <td>
                                        <a href="../Branch/EditBranch?BranchID=@item.BranchID" class="btn btn-default"><span class="fa fa-pencil"></span></a>
                                        <a href="javascript:DeleteRecord(@(item.BranchID));" class="btn btn-danger"><span class="fa fa-remove"></span></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="btn-floating" id="help-actions">
    <div class="btn-bg"></div>
    <button type="button" class="btn btn-default btn-toggle" data-toggle="toggle" data-target="#help-actions">
        <i class="icon fa fa-plus"></i>
        <span class="help-text">Shortcut</span>
    </button>
    <div class="toggle-content">
        <ul class="actions">
            <li><a href="~/Branch/CreateBranch">Create Branch</a></li>
        </ul>
    </div>
</div>