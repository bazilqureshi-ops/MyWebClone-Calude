@using Emse.QMagic.Web.Models;
@model Emse.QMagic.Web.Models.qmBranch
@{
    ViewBag.Title = "EditBranch";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<qmBranch> branches = ViewBag.data;
    List<qmBranchGroupMatch> groupitems = ViewBag.dataitems;
}


<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Branch Management
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Select Branches to Group With</label>
                                        <div class="col-md-9">
                                            <select name="BranchList" class="select2" multiple="multiple" size="5">
                                                @foreach (qmBranch item in branches)
                                                {
                                                    if (groupitems.Where(x => x.BranchID == item.BranchID).Count() > 0)
                                                    {
                                                        <option value="@item.BranchID" selected="selected">@item.BranchName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.BranchID">@item.BranchName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-footer text-right">
                                <div class="form-group">
                                    <div class="col-md-9 col-md-offset-3">
                                        <a href="../Branch" class="btn btn-default">Cancel</a>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>
