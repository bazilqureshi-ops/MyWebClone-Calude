@using Emse.QMagic.Web.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<qmService> services = ViewBag.model;
}

<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" />
<script src="~/assets/js/sweetalert2.all.min.js"></script>

<script>
    function DeleteRecord(branchid) {
        $.post("../Service/PrepareDelete?ServiceID=" + branchid, {}, function (data) {

            swal({
                title: "Are you sure want to delete this record?",
                text: data,
                icon: "warning",
                buttons: true,
                dangerMode: true,
                content: data
            })
                .then((willDelete) => {
                    if (willDelete) {
                        //window.location = "../Appointment/DeleteSchedule?AppointmentID=" + recordid;

                        $("#PostDelete").submit();
                    } else {
                        swal({
                            title: "Nothing changed",
                            icon: "success"
                        });
                    }
                });

            $(".swal-text").html(data);
        });
    }
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Service Management
            </div>
            <div class="card-body no-padding">
                <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Service Code</th>
                            <th>Service Name</th>
                            <th>Work Time</th>
                            <th>Service Prefix - Range</th>
                            <th>Is Repeatable</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (qmService item in services)
                            {
                                <tr>
                                    <td>@item.ServiceCode</td>
                                    <td>@item.ServiceName</td>
                                    <td>@item.WorkTimeStart - @item.WorkTimeFinish</td>
                                    <td>@item.ServicePrefix / @item.TicketStartNumber - @item.TicketFinishNumber</td>
                                    <td>@item.Repeatable</td>
                                    <td>
                                        <a href="../Service/EditService?id=@item.ServiceID" class="btn btn-default"><span class="fa fa-pencil"></span></a>
                                        <a href="javascript:DeleteRecord(@(item.ServiceID));" class="btn btn-danger"><span class="fa fa-remove"></span></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="btn-floating" id="help-actions">
    <div class="btn-bg"></div>
    <button type="button" class="btn btn-default btn-toggle" data-toggle="toggle" data-target="#help-actions">
        <i class="icon fa fa-plus"></i>
        <span class="help-text">Shortcut</span>
    </button>
    <div class="toggle-content">
        <ul class="actions">
            <li><a href="~/Service/CreateService">Create Service</a></li>
        </ul>
    </div>
</div>