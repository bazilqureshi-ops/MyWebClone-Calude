@using Emse.QMagic.Web.Models;
@model Emse.QMagic.Web.Models.qmSegment
@{
    ViewBag.Title = "Create Segment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<qmService> services = ViewBag.services;
    List<qmAutoTransferRule> atrs = ViewBag.atrs;

}

<script>
    $(document).on('submit', 'form', function () {
        var button = $(this).find(':submit');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>

<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" />
<script src="~/assets/js/sweetalert2.all.min.js"></script>
<script>
    $(document).ready(function () {
        var servicecount = @(services.Count());
        var atrcount = @(atrs.Count());

        if (atrcount < 1 || servicecount < 1) {
            var str = "<p>You're not meeting the minimum requirements of creating a new apponintment schedule. You should have at least one service and a auto transfer route.</p>";

            if (atrcount < 1) {
                str += "Please <a href = '../AutoTransferRoute' > click here</a> to create new auto transfer route.<br /> ";
            }
            if (servicecount < 1) {
                str += "Please <a href='../Service'>click here</a> to create new service.<br/>";
            }

            swal({
                title: "Hmm.. Consider This",
                text: str,
                icon: "warning",
                buttons: false,
                dangerMode: true,
                content: str
            });

            $(".swal-text").html(str);
        }
    });
</script>

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <div class="card">
            <div class="card-header">
                Segment Management
            </div>
            <div class="card-body">
                <form action="~/Segment/CreateSegment" method="post">
                    <div class="row">


                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Service Name</label>
                                <div class="col-md-10">
                                    <select class="select2" name="ServiceID">
                                        <option value="" selected="selected">Select..</option>
                                        @{
                                            foreach (qmService item in services)
                                            {
                                                <option value="@item.ServiceID">@item.ServiceName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Auto Transfer Route Name</label>

                                <div class="col-md-10">
                                    <select name="ATRID" id="ATRID" class="select2">
                                        @foreach (var item in atrs)
                                        {
                                            <option value="@item.AutoTransferRuleID">@item.AutoTransferName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Segment Name</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SegmentName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Segment Prefix</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SegmentPrefix, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Ticket Range</label>
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.TicketStartNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.TicketFinishNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Segment Priority</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SegmentPriority, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="form-footer text-right">
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <a href="../Segment" class="btn btn-default">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>