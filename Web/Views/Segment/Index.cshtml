@using Emse.QMagic.Web.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<qmSegment> segmentlist = ViewBag.data;
    List<qmService> servicelist = ViewBag.services;
}

<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" />
<script src="~/assets/js/sweetalert2.all.min.js"></script>

<script>
    function DeleteRecord(branchid) {
        $.post("../Segment/PrepareDelete?SegmentID=" + branchid, {}, function (data) {

            swal({
                title: "Are you sure want to delete this record?",
                text: data,
                icon: "warning",
                buttons: true,
                dangerMode: true,
                content: data
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $("#PostDelete").submit();
                    } else {
                        swal({
                            title: "Nothing changed",
                            icon: "success"
                        });
                    }
                });

            $(".swal-text").html(data);
        });
    }
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Segment Management
            </div>
            <div class="card-body no-padding">
                <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Segment Name</th>
                            <th>Segment Tickets</th>
                            <th>Segment Priority</th>
                            <th>Attached Service</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (qmSegment item in segmentlist)
                            {
                                <tr>
                                    <td>@item.SegmentName</td>
                                    <td>@item.SegmentPrefix / @item.TicketStartNumber - @item.TicketFinishNumber</td>
                                    <td>@item.SegmentPriority</td>
                                    <td>
                                        @{
                                            qmService ss = servicelist.Where(x => x.ServiceID == item.ServiceID).FirstOrDefault();
                                            @ss.ServiceName
                                    }
                                </td>
                                    <td>
                                        <a href="../Segment/EditSegment?SegmentID=@item.SegmentID" class="btn btn-default"><span class="fa fa-pencil"></span></a>
                                        <a href="javascript:DeleteRecord(@(item.SegmentID));" class="btn btn-danger"><span class="fa fa-remove"></span></a>
                                    </td>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="btn-floating" id="help-actions">
    <div class="btn-bg"></div>
    <button type="button" class="btn btn-default btn-toggle" data-toggle="toggle" data-target="#help-actions">
        <i class="icon fa fa-plus"></i>
        <span class="help-text">Shortcut</span>
    </button>
    <div class="toggle-content">
        <ul class="actions">
            <li><a href="~/Service/CreateService">Create Service</a></li>
            <li><a href="~/Segment/CreateSegment">Create Segment</a></li>
        </ul>
    </div>
</div>