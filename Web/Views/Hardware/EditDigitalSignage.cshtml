@using Emse.QMagic.Web.Models;
@model Emse.QMagic.Web.Models.qmDigitalSignage
@{
    ViewBag.Title = "Edit Digital Signage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    qmDigitalSignage digitalsignage = ViewBag.data;
    List<qmBranch> branches = ViewBag.branches;
    List<qmScreenDesign> designs = ViewBag.designs;
}


<script>
    $(document).on('submit', 'form', function () {
        var button = $(this).find(':submit');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Digital Signage Management
            </div>
            <div class="card-body">
                    <form action="~/Hardware/EditDigitalSignage?Edited=@digitalsignage.DigitalSignageID" method="post">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Branch</label>
                                        <div class="col-md-9">
                                            <select name="BranchID" id="BranchID" class="select2">
                                                @{
                                                    foreach (qmBranch item in branches)
                                                    {
                                                        if (item.BranchID == digitalsignage.BranchID)
                                                        {
                                                            <option value="@item.BranchID" selected="selected">@item.BranchName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.BranchID">@item.BranchName</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Screen Design</label>
                                        <div class="col-md-9">
                                            <select name="ScreenDesignID" id="ScreenDesignID" class="select2">
                                                @{
                                                    foreach (qmScreenDesign item in designs)
                                                    {
                                                        if (item.ScreenDesignID == digitalsignage.ScreenDesignID)
                                                        {
                                                            <option value="@item.ScreenDesignID" selected="selected">@item.DesignName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.ScreenDesignID">@item.DesignName</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Digital Signage Name</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => digitalsignage.DigitalSignageName, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Location</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => digitalsignage.DigitalSignageLocation, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">I.P. Address</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => digitalsignage.IPAddress, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Port Number</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => digitalsignage.PortNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">QoS Lock</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => digitalsignage.QoSLock, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-footer text-right">
                                <div class="form-group">
                                    <div class="col-md-9 col-md-offset-3">
                                        <a href="../Hardware/DigitalSignage" class="btn btn-default">Cancel</a>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
