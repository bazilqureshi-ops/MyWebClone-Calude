@using Emse.QMagic.Web.Models;
@model Emse.QMagic.Web.Models.qmDigitalSignage
@{
    ViewBag.Title = "Create Digital Signage";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<qmBranch> branches = ViewBag.branches;
    List<qmScreenDesign> designs = ViewBag.designs;
}

<script>
    $(document).on('submit', 'form', function () {
        var button = $(this).find(':submit');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>

<link href="~/assets/css/sweetalert2.min.css" rel="stylesheet" />
<script src="~/assets/js/sweetalert2.all.min.js"></script>
<script>
    $(document).ready(function () {
        var designcount = @(designs.Count());
        var branchcount = @(branches.Count());

        if (branchcount < 1 || designcount < 1) {
            var str = "<p>You're not meeting the minimum requirements of creating a new digital signage. You should have at least one branch and a design.</p>";

            if (branchcount < 1) {
                str += "Please < a href = '../Branch' > click here</a > to create new branch.< br /> ";
            }
            if (designcount < 1) {
                str += "Please <a href='../DigitalSignageDesigner'>click here</a> to create new design.<br/>";
            }

            swal({
                title: "Hmm.. Consider This",
                text: str,
                icon: "warning",
                buttons: false,
                dangerMode: true,
                content: str
            });

            $(".swal-text").html(str);
        }
    });
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Digital Signage Management
            </div>
            <div class="card-body">
                <form action="~/Hardware/CreateDigitalSignage" method="post">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Branch</label>
                                    <div class="col-md-9">
                                        <select name="BranchID" id="BranchID" class="select2">
                                            @{
                                                foreach (qmBranch item in branches)
                                                {
                                                    <option value="@item.BranchID">@item.BranchName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Screen Design</label>
                                    <div class="col-md-9">
                                        <select name="ScreenDesignID" id="ScreenDesignID" class="select2">
                                            @{
                                                foreach (qmScreenDesign item in designs)
                                                {
                                                    <option value="@item.ScreenDesignID">@item.DesignName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Digital Signage Name</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.DigitalSignageName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Location</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.DigitalSignageLocation, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">I.P. Address</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.IPAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Port Number</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.PortNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">QoS Lock</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.QoSLock, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-footer text-right">
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <a href="../Hardware/DigitalSignage" class="btn btn-default">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>