@using Emse.QMagic.Web.Models;
@model Emse.QMagic.Web.Models.qmKiosk
@{
    ViewBag.Title = "Edit Kiosk";
    Layout = "~/Views/Shared/_Layout.cshtml";
    qmKiosk kiosk = ViewBag.data;
    string design = ViewBag.design;
    string branch = ViewBag.branch;
    List<qmBranch> branches = ViewBag.branches;
    List<qmScreenDesign> designs = ViewBag.designs;
}

<script>
    $(document).on('submit', 'form', function () {
        var button = $(this).find(':submit');
        setTimeout(function () {
            button.attr('disabled', 'disabled');
        }, 0);
    });
</script>

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Kiosk Management
            </div>
            <div class="card-body">
                <form action="~/Hardware/EditKiosk?KioskID=@kiosk.KioskID" method="post">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Branch</label>
                                    <div class="col-md-9">
                                        <select name="BranchID" id="BranchID" class="select2">
                                            @{
                                                foreach (qmBranch item in branches)
                                                {
                                                    if (branch == item.BranchName)
                                                    {
                                                        <option value="@item.BranchID" selected="selected">@item.BranchName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.BranchID">@item.BranchName</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Screen Design</label>
                                    <div class="col-md-9">
                                        <select name="ScreenDesignID" id="ScreenDesignID" class="select2">
                                            @{
                                                foreach (qmScreenDesign item in designs.Where(designForEach => designForEach.DesignType == 1))
                                                {
                                                    if (design == item.DesignName)
                                                    {
                                                        <option value="@item.ScreenDesignID" selected="selected">@item.DesignName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.ScreenDesignID">@item.DesignName</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Kiosk Name</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => kiosk.KioskName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Kiosk Location</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => kiosk.KioskLocation, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">IP Address</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => kiosk.IPAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Port Number</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => kiosk.PortNumber, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">QoS Lock</label>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => kiosk.QoSLock, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-footer text-right">
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <a href="../Hardware/Kiosk" class="btn btn-default">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
