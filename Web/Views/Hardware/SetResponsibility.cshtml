@using Emse.QMagic.Web.Models;
@{
    ViewBag.Title = "Set Responsibility";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<qmTerminal> Terminals = ViewBag.Terminals;
    List<qmDSTerminal> Responses = ViewBag.Responses;
    qmDigitalSignage DigitalSignage = ViewBag.DigitalSignage;
    List<qmBranch> Branches = ViewBag.Branches;
}


<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                Digital Signage > Responsibility Manager
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-xs-12">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Select Terminals to Show in This Digital Signage</label>
                                    <div class="col-md-8">
                                        <select name="TerminalList" class="select2" multiple="multiple" size="5" style="width:100%;">
                                            @foreach (qmTerminal item in Terminals)
                                            {
                                                if (Responses.Where(x => x.TerminalID == item.TerminalID).Count() > 0)
                                                {
                                                    <option value="@item.TerminalID" selected="selected">[@(Branches.Where(x=>x.BranchID == item.BranchID).FirstOrDefault().BranchName)] @(item.TerminalName)</option>
                                                }
                                                else
                                                {
                                        <option value="@item.TerminalID">[@(Branches.Where(x=>x.BranchID == item.BranchID).FirstOrDefault().BranchName)] @(item.TerminalName)</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                        </div>
                        <div class="form-footer text-right">
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <a href="../Hardware/DigitalSignage" class="btn btn-default">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
